<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>netcoreapp2.0</TargetFramework>
    <PackageId>OperationResult.Extensions</PackageId>
    <Version>2.0.0</Version>
    <Authors>Ganu»ôceac Vlad</Authors>
    <Product>OperationResult.Extensions</Product>
    <Title>OperationResult.Extensions</Title>
    <Description>
      The extensions for OperationResult have been created for managing HTTP statuses via OperationResult library and converting the corresponding execution results into ActionResults.
    </Description>
    <RepositoryUrl>https://github.com/VladGanuscheak/OperationResult.Extensions</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PackageTags>result;operationresult;fluent;fluentresult;fluentoperationresult;extensions;utility;.net;dotnet;c#</PackageTags>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <GeneratePackageOnBuild>True</GeneratePackageOnBuild>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageIcon>logo.png</PackageIcon>
    <PackageIconUrl />
    <PackageReleaseNotes>Migrated to .Net Core 2.0.
Added such success OperationReult to ActionResult extension as "AsAlreadyReportedOrFailure" and "AsIMUsedOrFailure". 
Added such failure OperationResult definisions inside the OperationResultHelper as "PayloadTooLarge", "UriTooLong", "RangeNotSatisfiable", "MisdirectedRequest", "UpgradeRequired", "PreconditionRequired", "TooManyRequests" and "RequestHeaderFieldsTooLarge".
</PackageReleaseNotes>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\README.md">
      <Pack>True</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Include="C:\Users\User\Desktop\Logos\logo.png">
      <Pack>True</Pack>
      <PackagePath></PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.AspNetCore.Http" Version="2.2.2" />
    <PackageReference Include="Microsoft.AspNetCore.Mvc.Core" Version="2.2.5" />
    <PackageReference Include="OperationResult.Net" Version="2.0.0" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Update="Microsoft.NETCore.App" Version="2.0.9" />
  </ItemGroup>

</Project>
